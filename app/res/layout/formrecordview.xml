<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:padding="@dimen/cell_padding_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avatar_form"/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/formrecord_txt_right"
            android:textColor="?attr/filter_select_text_color"
            android:layout_alignParentBottom="true"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/formrecord_txt_upp_right"
            android:layout_above="@+id/formrecord_txt_right"
            android:textColor="?attr/filter_select_text_color"
            android:gravity="right"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formrecord_txt_main"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:textColor="?attr/filter_select_text_color"
            android:layout_toLeftOf="@id/formrecord_txt_upp_right"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formrecord_txt_btm"
            android:textColor="?attr/filter_select_text_color"
            android:layout_below="@+id/formrecord_txt_main"></TextView>
    </RelativeLayout>
</LinearLayout>
